<script type="text/javascript">
window.onload = init;
function init(){
var map = new ol.Map({
        target: 'map',
        layers: [
          new ol.layer.Tile({
            source: new ol.source.OSM()
          })
        ],
        view: new ol.View({
          center: ol.proj.fromLonLat([0,0]),
          zoom: 1 //Initial Zoom Level
        })
        
      });
      map.on('click', function(e){
            console.log(e.coordinate);
            document.getElementById('display').innerHTML = "You have selected -> " + e.coordinate;
        })
    }
</script>
